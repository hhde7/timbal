{% for day in days %}
  <div class="days">
    <h3>{{ day.day }}</h3>
    <ul class="nav nav-pills nav-stacked">

      {% for course in userCourses %}
        {% if day.day is same as(course.day) %}

          <li class="course-menu">
            <span class="course-day">{{ "%02d"|format(course.chosenHour) }}</span>
            :
            {{ "%02d"|format(course.chosenMinute) ~ ' ' ~ course.course }}

          {% endif %}
        </li>

      {% endfor %}
    </ul>
  </div>
{% endfor %}
