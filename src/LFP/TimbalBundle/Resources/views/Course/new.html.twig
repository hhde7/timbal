{# src/LFP/TimbalBundle/Resources/views/Course/when.html.twig #}

{% extends "LFPTimbalBundle::layout.html.twig" %}

{% block title %}{{ parent() }}
  - New course

{% endblock %}

{% block lfptimbal_body %}

  {% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.0/jquery-confirm.min.css">
    <link rel="stylesheet" type="text/css" href="http://localhost/Symfony/web/assets/css/print.css" media="print">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.9/css/all.css" integrity="sha384-5SOiIsAziJl6AWe0HWRKTXlfcSHKmYV4RBF18PPJ173Kzn7jzMyFuTtk8JA7QQG1" crossorigin="anonymous">
    <link rel="stylesheet" href="http://localhost/Symfony/web/assets/css/new.css">
  {% endblock %}
  <div id="wrapper">
    {% for flashMessage in app.session.flashbag.get('notice') %}
      <div id="notification">
        <p>
          <i class="fas fa-arrow-left"></i>{{ flashMessage }}
        </p>
      </div>
    {% endfor %}
    <h1>Timbal</h1>
    <p id="days-label" for="button">{{ action1 }}</p>

    <div id="days">
      <button type="button" name="button" class="day" title="Monday" id="monday">M</button>
      <button type="button" name="button" class="day" title="Tuesday" id="tuesday">T</button>
      <button type="button" name="button" class="day" title="Wednesday" id="wednesday">W</button>
      <button type="button" name="button" class="day" title="Thursday" id="thursday">Th</button>
      <button type="button" name="button" class="day" title="Friday" id="friday">F</button>
      <button type="button" name="button" class="day" title="Saturday" id="saturday">S</button>
      <button type="button" name="button" class="day" title="Sunday" id="sunday">Sn</button>
    </div>

    <div class="left-bloc-landscape">

      <div id="clock-module">
        <div id="inner-circle"></div>
        <div id="circle1">
          <div id="outer-circle"></div>
          <!-- grey lines -->
          <div class="angle" id="angle-00"></div>
          <div class="angle" id="angle-05"></div>
          <div class="angle" id="angle-10"></div>
          <div class="angle" id="angle-15"></div>
          <div class="angle" id="angle-20"></div>
          <div class="angle" id="angle-25"></div>
        </div>

        <div id="circle2">
          <div id="choice">
            <span id="time-separator"></span>
          </div>
        </div>

        <div id="chosen-duration">
          <div id="course-duration">
            <p>Course duration</p>
            <span id="duration-separator">H</span>
          </div>
        </div>
      </div>

    </div>

    <div class="block-right-landscape">

      {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

      {{ form_errors(form) }}

      <div id="when">

        {{ form_widget(form.day, { 'attr': {'readonly': 'readonly', 'required': 'required', 'value': 'Day ?'}}) }}

        <div id="chosen-time">

          {{ form_widget(form.chosenHour, {'attr': {'readonly': 'readonly', 'required': 'required'}}) }}

          {{ form_widget(form.chosenMinute, {'attr': {'readonly': 'readonly', 'required': 'required'}}) }}

        </div>

        {{ form_widget(form.durationHour, {'attr': {'readonly': 'readonly', 'required': 'required'}}) }}

        {{ form_widget(form.durationMinute, {'attr': {'readonly': 'readonly', 'required': 'required'}}) }}

      </div>
    </div>
    <div id="under-clock">

      <div class="errors-box">
        {% if errors.course | length > 0 %}
          <p id="course-error">{{ ' ' ~ errors.course }}</p>
        {% endif %}
        {% if errors.room | length > 0 %}
          <p id="room-error">{{ ' ' ~ errors.room }}</p>
        {% endif %}
        {% if errors.building | length > 0 %}
          <p id="building-error">{{ ' ' ~ errors.building }}</p>
        {% endif %}
        {% if errors.teacher | length > 0 %}
          <p id="teacher-error">{{ ' ' ~ errors.teacher }}</p>
        {% endif %}
      </div>

      <div class="two-inputs">

        <div class="inputs">
          {{ form_label(form.course) }}
          {{ form_widget(form.course) }}
        </div>
        <div class="inputs">
          {{ form_label(form.room) }}
          {{ form_widget(form.room, {'attr': {'placeholder':'Room'}}) }}
        </div>
      </div>
      <div class="two-inputs">

        <div class="inputs">
          {{ form_label(form.building) }}
          {{ form_widget(form.building, {'attr': {'placeholder':'Optional'}}) }}
        </div>
        <div class="inputs">
          {{ form_label(form.teacher) }}
          {{ form_widget(form.teacher, {'attr': {'placeholder':'Optional'}}) }}
        </div>

      </div>
      <div>
        {{ form_widget(form.save, { 'label': 'Add this course' , 'attr': {'class': 'save', 'title': 'Set time first', 'disabled': 'disabled'}}) }}
      </div>
    </div>
    {{ form_rest(form) }}

    {{ form_end(form) }}

  </div>

  <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.0/jquery-confirm.min.js"></script>

  <script type="text/javascript" src="http://localhost/Symfony/web/assets/js/deleteCourse.js"></script>
  <script type="text/javascript" src="{{ asset('assets/js/deleteAllCourses.js') }}"></script>
  <script type="text/javascript" src="{{ asset('assets/js/new.js') }}"></script>
  <script type="text/javascript" src="http://localhost/Symfony/web/assets/js/printTimbal.js"></script>
  <script type="text/javascript" src="http://localhost/Symfony/web/assets/js/menu.js"></script>

{% endblock %}
